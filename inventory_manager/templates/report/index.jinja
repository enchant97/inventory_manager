{% extends "/base.jinja" %}
{% set title="Reports" %}
{% block main %}
<nav class="bnt-group">
    <a href="{{ url_for('root.get_index') }}">Back</a>
    <a href="{{ url_for('.get_new') }}">New Report</a>
</nav>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for report in reports %}
        <tr>
            <td>{{ report.name }}</td>
            <td class="group jc-end gap-3">
                <a class="bnt" href="{{ url_for('.get_report', report_id=report.id) }}">View</a>
                <a class="bnt col-danger" href="{{ url_for('.get_purge', report_id=report.id) }}">Purge</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock main %}
